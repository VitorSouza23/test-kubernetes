@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to V2</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <p>Weather Forecasts Count: @Model.WeatherForecasts.Count()</p>

    <div class="center">
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Temperature (Cº)</th>
                    <th>Temperature (Fº)</th>
                    <th>Summary</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.WeatherForecasts)
                {
                    <tr>
                        <td>Date: @item.Date</td>
                        <td>T: @item.TemperatureC Cº</td>
                        <td>Temperature (F): @item.TemperatureF F</td>
                        <td>Summary: @item.Summary</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
